{% extends 'base.html.twig' %}

{% block title %}Restaurant{% endblock %}

{% block body %}
    <h1>Restaurant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ restaurant.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ restaurant.name }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ restaurant.cp }}</td>
            </tr>
            <tr>
                <th>Adress</th>
                <td>{{ restaurant.adress }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ restaurant.specialite }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ restaurant.slug }}</td>
            </tr>
            <tr>
                <th>Avis</th>
                <td>{{ restaurant.avis }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ restaurant.description }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ restaurant.longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ restaurant.latitude }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_resto_index') }}">back to list</a>
    
    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('app_resto_edit', {'id': restaurant.id}) }}">edit</a>

    {{ include('resto/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
